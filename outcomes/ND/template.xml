                <knowl>
                    <content>
                        <p>
                            Consider lines <m>\mathcal{L}_1={{Lu}}, \mathcal{L}_2 = {{Lv}}</m>.  Find their point of intersection, if they don't intersect, state so.
                        </p>
                    </content>
                    <outtro>
                        <p>
                            <m>\mathcal{L}_1</m> passes through <m>{{P}}</m> when <m>t={{tu}}</m>.  <m>\mathcal{L}_2</m> passes through <m>{{P}}</m> when <m>t={{tv}}</m>.  The point of intersection is <m>{{P}}</m>.
                        </p>
                    </outtro>
                </knowl>
    
                <knowl>
                    <content>
                        <p>
                            Find the plane orthogonal to <m>{{planeV}} = {{k0}} </m> containing <m>\mathcal{L}_1={{Lu}}</m>.
                        </p>
                    </content>
                    <outtro>
                        <p>
                            This plane is <m>{{planecross}} = {{k1}} </m>.
                        </p>
                    </outtro>
                </knowl>
    
                <knowl>
                    <content>
                        <p>
                            Parameterize the line that is the intersection of <m>{{planeU}} = {{ku}} </m> and <m>{{planeV}} = {{kv}} </m>.
                        </p>
                    </content>
                    <outtro>
                        <p>
                            This line is <m>{{Lcross}} </m>.
                        </p>
                    </outtro>
                </knowl>
                
                
   
    
